---
import Navigation from "@components/Navigation.astro";
import { getSession } from "auth-astro/server";
import { SignIn, SignOut } from "auth-astro/components";

const session = await getSession(Astro.request);

interface Props {
    title: string;
}

const { title } = Astro.props;

const siteNavLinks = [
    {
        url: "/",
        text: "Branch Duck",
    },
    {
        url: "/dashboard",
        text: "Dashboard",
    },
];

const dashboardNavLinks = [
    {
        url: "/dashboard/pages",
        text: "Pages",
    },
    {
        url: "/dashboard/flows",
        text: "Flows",
    },
    {
        url: "/dashboard/conditions",
        text: "Conditions",
    },
    {
        url: "/dashboard/headings",
        text: "Headings",
    },
    {
        url: "/dashboard/links",
        text: "Links",
    },
    {
        url: "/dashboard/buttons",
        text: "Buttons",
    },
];
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} - Branch Duck</title>
    </head>
    <body>
        {
            session ? (
                <SignOut>Logout</SignOut>
            ) : (
                <SignIn provider="github">Login with GitHub</SignIn>
            )
        }
        <Navigation name="Site" links={siteNavLinks} />
        <Navigation name="Dashboard" links={dashboardNavLinks} />
        <slot />
    </body>
</html>
