---
import "@styles/global.css";
import { Head } from "astro-capo";
import SiteHeader from "@layouts/components/SiteHeader.astro";
import Link from "@layouts/components/Link.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;

const links = [
    {
        url: "/dashboard/pages",
        text: "Pages",
    },
    {
        url: "/dashboard/flows",
        text: "Flows",
    },
    {
        url: "/dashboard/conditions",
        text: "Conditions",
    },
    {
        url: "/dashboard/headings",
        text: "Headings",
    },
    {
        url: "/dashboard/links",
        text: "Links",
    },
    {
        url: "/dashboard/buttons",
        text: "Buttons",
    },
];
---

<html lang="en">
    <Head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} - Branch Duck</title>
        <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
        <link
            rel="preload"
            href="/fonts/Atkinson-Hyperlegible-Regular-102a.woff2"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />
        <link
            rel="preload"
            href="/fonts/Atkinson-Hyperlegible-Bold-102a.woff2"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />
    </Head>
    <body>
        <SiteHeader shouldUseName />
        <div class="dashboard-layout">
            <nav aria-label="dashboard">
                <ul role="list">
                    {
                        links.map((link) => (
                            <li>
                                <Link url={link.url}>{link.text}</Link>
                            </li>
                        ))
                    }
                </ul>
            </nav>
            <slot />
        </div>
    </body>
</html>

<style>
    .dashboard-layout {
        display: grid;
        grid-template-columns: auto 1fr;
    }

    li :global(a) {
        display: block;
        padding: 0.5rem 1rem;
    }
</style>
